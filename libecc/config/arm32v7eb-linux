global:
  static_default: true
compiler:
  cxx_include_dirs:
    - $R/include/c++
  c_include_dirs:
    - $R/include/arm
    - $R/include
  options:
    - -target armeb-ellcc-linux
    - -march=armv7a
    - -mfpu=vfp
    - -mfloat-abi=softfp
    - -integrated-as
assembler:
  exe: $E/arm-elf-as$X
  options:
    - -EB
    - -meabi=5
    - -mcpu=cortex-a8
    - -march=armv7-a
  output:
    - -o $O
linker:
  exe: $E/ecc-ld$X
  options:
    - -m armelfb_linux_eabi
    - --build-id
    - --hash-style=gnu
    - --eh-frame-hdr
  output:
    - -o $O
  start:
    - -e _start
  opt_static:
    - -Bstatic
  opt_rdynamic:
    - -export-dynamic
  opt_dynamic:
    - -Bdynamic
  opt_shared:
    - -shared
  opt_notshared:
    - -dynamic-linker /usr/libexec/ld.so
  opt_pthread:
    - -pthread
  static_crt1: $R/lib/arm32v7eb-linux/crt1.o
  dynamic_crt1: $R/lib/arm32v7eb-linux/Scrt1.o
  crtbegin: $R/lib/arm32v7eb-linux/crtbegin.o
  crtend: $R/lib/arm32v7eb-linux/crtend.o
  library_paths:
    - -L$R/lib/arm32v7eb-linux
  cxx_libraries:
    - -lc++
    - -lm
  profile_libraries:
    - -u __ecc_profile_runtime
  c_libraries:
    - -(
    - -lc
    - -lcompiler-rt
    - -)
